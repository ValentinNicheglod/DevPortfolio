---
interface Props {
  color: string;
}

const { color = "#ff6b6b" } = Astro.props;

const BASE_SIZE = 50;
const RANDOM_NUMBER = Math.ceil(Math.random() * 10);
const size = Math.max(10, BASE_SIZE / RANDOM_NUMBER) + "vw";
---

<div
  style={{ backgroundColor: color, width: size, height: size }}
  class="rounded-full opacity-75 blur-2xl"
>
</div>
