---
interface Props {
  size?: number;
  blur?: number;
  color?: string;
}

const { size = 100, blur = 40, color = '#ff6b6b' } = Astro.props;
---

<svg
  width={size * 2}
  height={size * 2}
  xmlns="http://www.w3.org/2000/svg"
  viewBox={`0 0 ${size * 4} ${size * 4}`}
>
  <defs>
    <filter id="blur" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation={blur} />
    </filter>
  </defs>
  <circle
    cx="50%"
    cy="50%"
    r={size}
    fill={color}
    filter="url(#blur)"
  />
</svg>
