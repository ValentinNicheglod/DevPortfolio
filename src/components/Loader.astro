<>
  <div class="wrapper absolute inset-0 z-40 m-auto bg-color overflow-hidden">
  </div>
  <img src="/logo.svg" alt="" class="logo absolute inset-0 m-auto z-50" />
</>
<script is:inline>
  const wrapper = document.querySelector(".wrapper");
  setTimeout(() => {
    wrapper?.classList.add("hide");
    setTimeout(() => {
      wrapper?.classList.add("opacity-0");
    }, 1500);
  }, 1000);
</script>
<style>
  .wrapper {
    width: 100vw;
    height: 100vw;
    border-radius: 100vw;
    transition: 2s ease-in;
    transform: scale(1.5);
  }

  .hide {
    transform: scale(0);
  }

  img {
    width: 150px;
    transition: 1.25s ease-in;
    animation: loading-logo 2s ease-in forwards .8s;
  }

  @keyframes loading-logo {
    5% {
      transform: scale(1);
      opacity: 1;
    }

    10% {
      transform: scale(1.1);
    }

    15% {
      transform: scale(1.2);
    }

    20% {
      transform: scale(1.3);
    }

    25% {
      transform: scale(1.4);
    }

    30%,
    40% {
      transform: scale(1.5);
    }

    80% {
      opacity: 1;
    }

    100% {
      opacity: 0;
      transform: scale(0.25);
    }
  }

  @keyframes loading-screen {
    0% {
      width: 100vw;
      height: 1000vw;
    }

    99% {
      height: 1px;
      width: 1px;
    }

    100% {
      height: 0;
      width: 0;
      display: none;
    }
  }
</style>
