---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import "../styles/buttons.scss";

const { label, image, url, project, id } = Astro.props;
---

<button
  class="square-button"
  id={project && (url ? `${project.path}-${id}-button` : `${project.path}-gallery-button`)}
>
  <div class="flex justify-between w-full">
    <Image src={image} alt="" />
    <div>
      <div class="chevron">
        {url && <Icon name="external-link" class="icon link-icon" />}
        <Icon name="chevron-right" class="icon" />
      </div>
    </div>
  </div>
  <span class="font-medium button-label">
    {label}
  </span>
</button>
