---
// Enums
import { SkillFilters } from "../models/enums/filters.enum";

// Translations
import skillsTranslations from "../locales/about.locales.json";
const lang: "en" | "es" = Astro.currentLocale as "en" | "es";
const translations = skillsTranslations[lang];

const filterOptions = [
  {
    label: translations.skills.personal,
    shortLabel: "Personales",
    value: SkillFilters.PERSONAL,
  },
  {
    label: translations.skills.design,
    shortLabel: "Dise√±o",
    value: SkillFilters.DESIGN,
  },
  {
    label: translations.skills.dev,
    shortLabel: "Desarrollo",
    value: SkillFilters.DEV,
  },
];
---

<div class="flex md:justify-end">
  <div id="skills-filter" class="filters" role="tablist">
    {
      filterOptions.map((option) => (
        <button
          id={`skill-filter-${option.value}`}
          data-value={option.value}
          aria-label={`${translations.filterBy} ${option.label}`}
          role="tab"
        >
          <div class="block md:hidden">{option.shortLabel}</div>
          <div class="md:block hidden">{option.label}</div>
        </button>
      ))
    }
    <div class="absolute p-1 w-full h-full">
      <div id="skills-filter-indicator" class="indicator"></div>
    </div>
  </div>
</div>
<style>
  @import url("../styles/filters.scss");
</style>
