---
// Components
import { Icon } from "astro-icon/components";

// Assets
import { Image } from "astro:assets";

const { city, country, flag } = Astro.props;
---

<div class="rounded-full location">
  <div
    class="flex items-center gap-2 bg-slate-700 m-0.5 px-3 py-1 rounded-full inner-container"
  >
    <Icon aria-hidden="true" name="map-pin" class="text-slate-50" />
    <span class="text-white text-xs sm:text-sm">
      {city}, <span class="font-light text-slate-200">{country}</span>
    </span>
    <Image src={flag} class="ml-auto w-5 h-5" alt="" />
  </div>
</div>
<style lang="scss">
  .location {
    background: linear-gradient(45deg, #149bff, #2bfeff);

    &:nth-child(odd) {
      background: linear-gradient(45deg, #2bfeff, #149bff);
    }

    .inner-container {
      border: 2px solid var(--bg-color-2);
    }
  }
</style>
