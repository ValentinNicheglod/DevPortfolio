---
// Components
import Location from "./Location.astro";
import SocialLinks from "./SocialLinks.astro";

// Images
import { Image } from "astro:assets";
import profilePic from "../images/ProfilePic.png";
import UYFlag from "../images/flags/UY.png";
import ARFlag from "../images/flags/AR.png";
---

<div
  id="user-card"
  class="inner-container flex flex-col gap-6 lg:gap-8 my-6 md:my-0 py-6 lg:py-8 p-8 rounded-3xl"
>
  <div class="grid gap-3 lg:gap-4">
    <div class="profile-pic w-56 md:w-48 aspect-square rounded-full p-1 m-auto">
      <Image src={profilePic} class="inner-container m-auto rounded-full" alt="" />
    </div>
    <div class="grid gap-1 items-center">
      <h4 class="font-semibold text-2xl text-center">Valentín Nicheglod</h4>
      <span class="text-center text-sm font-light">
        Full Stack Developer & UX/UI Designer
      </span>
    </div>
  </div>
  <div class="grid gap-1 lg:gap-2 md:min-w-[16rem] md:max-w-[40rem] m-auto">
    <Location city="Paysandú" country="Uruguay" flag={UYFlag} />
    <Location city="Buenos Aires" country="Argentina" flag={ARFlag} />
  </div>
  <div class="flex flex-1 items-end justify-center">
    <SocialLinks />
  </div>
</div>
<style type="scss">
  #user-card {
    .profile-pic {
      background: linear-gradient(45deg, #2bfeff, #149bff);
      img {
        border: 4px solid var(--bg-color-2);
      }
    }
  }
</style>
