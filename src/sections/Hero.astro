---
import ScrollInstruction from "../components/ScrollInstruction.astro";
import heroTranslations from "../locales/hero.locales.json";
import { Emojis } from "../models/enums/emojis.enum";

const lang: "en" | "es" = Astro.currentLocale as "en" | "es";
const translations = heroTranslations[lang];
---

<section id="hero" class="flex flex-col justify-center md:block">
  <h1 class="invisible">Valentín Nicheglod</h1>

  <ScrollInstruction lang={lang} />
  <div class="grid gap-8 p-8 md:p-0 md:w-fit md:ml-20 md:mt-20 z-10 relative">
    <div
      class="flex items-center p-8 gap-8 shadow-md rounded-3xl bg-white thin-border"
    >
      <div class="text-7xl" set:html={Emojis.HandWave}></div>
      <div class="grid gap-3">
        <span class="text-lg text-gray">{translations.presentation}</span>
        <div class="title">Valentín</div>
      </div>
    </div>
    <div class="grid gap-4">
      <div
        class="flex items-center px-8 py-4 gap-6 shadow-md rounded-3xl bg-white outline-slate-300"
      >
        <div class="text-4xl md:text-5xl" set:html={Emojis.Developer}></div>
        <h2 class="text-xl md:text-2xl text-slate-800">{translations.developer}</h2>
      </div>
      <div
        class="flex items-center px-8 py-4 gap-6 shadow-md rounded-3xl bg-white outline-slate-300"
      >
        <div class="text-4xl md:text-5xl" set:html={Emojis.Designer}></div>
        <h2 class="text-xl md:text-2xl text-slate-800">{translations.designer}</h2>
      </div>
    </div>
  </div>
</section>
<style type="scss">
  section {
    position: relative;
    background-image: url(../images/HeroBackground.jpg);
    background-size: cover;
    min-height: 100dvh;

    &::after {
      content: "";
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 5px;
      background: linear-gradient(90deg, #0768eb 60%, #1effff);
    }
  }
</style>
