---
import LanguageToggle from "../components/LanguageToggle.astro";
import ScrollInstruction from "../components/ScrollInstruction.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import heroTranslations from "../locales/hero.locales.json";

const lang: "en" | "es" = Astro.currentLocale as "en" | "es";
const translations = heroTranslations[lang];
---

<section id="hero">
  <h1 class="invisible">Valentín Nicheglod</h1>

  <ScrollInstruction lang={lang} />
  <div class="grid gap-8 w-fit ml-20 mt-20">
    <div
      class="flex items-center p-8 gap-8 shadow-md rounded-3xl bg-white outline-slate-300"
    >
      <div class="text-7xl">&#128075;&#127996;</div>
      <div>
        <span class="text-lg">{translations.presentation}</span>
        <div class="title">Valentín</div>
      </div>
    </div>
    <div class="grid gap-4">
      <div
        class="flex items-center px-8 py-4 gap-6 shadow-md rounded-3xl bg-white outline-slate-300"
      >
        <div class="text-5xl">&#x1F9D1;&#x1F3FB;&#x200D;&#x1F4BB;</div>
        <h2 class="text-2xl">{translations.developer}</h2>
      </div>
      <div
        class="flex items-center px-8 py-4 gap-6 shadow-md rounded-3xl bg-white outline-slate-300"
      >
        <div class="text-5xl">&#x1F9D1;&#x1F3FB;&#x200D;&#x1F3A8;</div>
        <h2 class="text-2xl">{translations.designer}</h2>
      </div>
    </div>
  </div>
</section>
<style>
  section {
    position: relative;
    height: 100dvh;
    background-image: url(/images/HeroBackground.jpg);
    background-size: cover;

    &::after {
      content: "";
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 5px;
      background: linear-gradient(90deg, #0768eb 60%, #1effff);
    }
  }
</style>
